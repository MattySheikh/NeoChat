{
  "manifest_version": 2,

  "short_name": "Neopets Chat",
  "name" : "Neopets mail enchancer",
  "description": "This extension improves neopets inbox and view/reply messages",
  "version": "1.0.2",
	"content_scripts": [
	    {
	      "matches": ["http://www.neopets.com/neomessages.phtml?type=read_message&folder=Inbox&id=*"],
	      "css": [],
	      "js": ["js/jquery.js", "js/smilies.js" , "viewMail.js"]
	    },
	    {
	    	"matches" : ["http://www.neopets.com/neomessages.phtml?folder=neochat"],
	    	"css" : ["css/chat.css", "css/sidebar.css", "css/jquery.toastmessage.css", "fontAwesome/css/font-awesome.min.css"],
	    	"js" : ["js/jquery.js", "js/niceScroll.js", "js/timeago.js", "js/jquery.toastmessage.js", "js/smilies.js", "js/Template.js" , "NeoChat.js", "viewChat.js"]
	    }, {
	    	"matches" : ["http://www.neopets.com/neomessages.phtml*"],
	    	"js" : ["js/jquery.js", "chatLink.js"]
	    }
	  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "activeTab",
    "http://www.neopets.com/",
    "declarativeContent",
    "storage",
    "webRequest",
    "cookies"
  ],
  "web_accessible_resources": [
    "template/*",
    "fontAwesome/fonts/*",
    "images/*"
  ],
  "background": {
    "scripts": ["js/smilies.js", "background.js"]
  }
}